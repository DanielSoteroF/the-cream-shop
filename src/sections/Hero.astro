---
import HeroZap from '../assets/img-hero/hero-zap.webp'
import CajaAcrilica from '../assets/img-hero/caja-acrilica.webp'
import KitLimpieza from '../assets/img-hero/kit-limpieza.webp'
---

<section class="w-11/12  mx-auto py-6 lg:py-20">
    <div>
        <div class="text-4xl lg:text-9xl">
            <h1 class="font-bold font-black-han-sans">SIGUE TOP CON</h1>
        </div>
        <div class="grid grid-cols-3">
            <div class="text-4xl lg:text-9xl col-span-2">
                <h1 class="font-bold font-black-han-sans">LA MODA *</h1>
            </div>
            <div class="text-xs lg:text-4xl col-span-1">
                <h3 class="font-poppins">
                    ¡Nuevas colecciones! <br>
                    ¡Nuevas colecciones!
                </h3>
            </div>
        </div>
    </div>

    <div class="grid lg:grid-cols-5 gap-10 py-10 h-[500px]">
        <div class="bg-secundary-green col-span-3 rounded-3xl flex items-center justify-center shadow-lg relative">
            <img class="absolute" src={HeroZap.src} alt="Moda">
        </div>
        <div class="col-span-3 max-sm:pt-8 lg:col-span-2 grid max-sm:grid-cols-2 lg:grid-rows-2 gap-10">
            <div class="bg-[url('./src/assets/img-hero/kit-limpieza.webp')] bg-no-repeat bg-cover bg-center w-full h-auto group shadow-lg rounded-3xl">
                <a class="hidden 
                    group-hover:flex 
                    w-full
                    h-full 
                    items-center 
                    justify-center 
                    text-neutral-white 
                    bg-[#0d0d0d38]
                    font-bold 
                    font-poppins
                    lg:text-3xl
                    text-xl
                    rounded-3xl"
                    href="#">
                    Ver producto
                </a>
            </div>
            <div class="bg-[url('./src/assets/img-hero/caja-acrilica.webp')] bg-no-repeat bg-cover bg-center w-full h-auto group shadow-lg rounded-3xl">
                <a class="hidden 
                    group-hover:flex 
                    w-full 
                    h-full 
                    items-center 
                    justify-center 
                    text-neutral-white 
                    bg-[#0d0d0d38]
                    font-bold 
                    font-poppins
                    lg:text-3xl
                    text-xl
                    rounded-3xl"
                    href="#">
                    Ver producto
                </a>
            </div>
        </div>
    </div>
</section>